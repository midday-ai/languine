{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "ui": "stream",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "dependsOn": ["^build"],
      "env": [
        "RESEND_API_KEY",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "TRIGGER_SECRET_KEY",
        "AI_GATEWAY_ENDPOINT_LARGE",
        "AI_MODEL_LARGE", 
        "AI_API_KEY_LARGE",
        "AI_GATEWAY_ENDPOINT",
        "AI_MODEL",
        "AI_API_KEY",
        "BASE_URL",
        "LANGUINE_PROJECT_ID",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "DATABASE_PRIMARY_URL",
        "DATABASE_US_URL",
        "DATABASE_EU_URL",
        "DATABASE_AU_URL",
        "POLAR_ENVIRONMENT",
        "POLAR_ACCESS_TOKEN",
        "POLAR_ORGANIZATION_ID",
        "POLAR_WEBHOOK_SECRET",
        "NEXT_PUBLIC_APP_URL"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts",
        ".expo/**",
        "dist"
      ]
    },
    "start": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "dev": {
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "persistent": true,
      "cache": false
    },
    "format": {},
    "lint": {
      "dependsOn": ["^topo"]
    },
    "typecheck": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    }
  }
}
